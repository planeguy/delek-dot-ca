{
  "name": "ddo",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "devDependencies": {
    "copyfiles": "^2.1.0",
    "http-server": "^0.10.0",
    "npm-run-all": "^4.1.5",
    "rename-cli": "^5.1.2",
    "rimraf": "^2.6.2",
    "rollup": "^0.67.3",
    "rollup-plugin-commonjs": "^9.2.0",
    "rollup-plugin-node-resolve": "^3.4.0",
    "rollup-plugin-riot": "^2.0.0",
    "rollup-plugin-svelte": "^5.0.3",
    "rollup-plugin-terser": "^4.0.4",
    "svelte": "^3.0.0-beta.10"
  },
  "dependencies": {
    "croppie": "^2.6.2",
    "invert-color": "^1.2.3",
    "iromi": "^1.0.1",
    "unfetch": "^3.0.0"
  },
  "scripts": {
    "clean": "rimraf dist",
    "index": "copyfiles --up 3 \"src/index/html/**/*.*\" dist",
    "post": "copyfiles --up 3 \"src/post/html/**/*.*\" dist/post",
    "configure:dev": "copyfiles --up 2 \"config/dev/**/*.*\" dist",
    "js": "rollup -c",
    "build": "npm-run-all --sequential clean --parallel index post js",
    "build:dev": "npm-run-all -s build configure:dev",
    "start": "http-server dist --cors -p 3505"
  }
}
