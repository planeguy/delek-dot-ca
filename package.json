{
  "name": "ddo",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "devDependencies": {
    "babel-core": "^6.20.0",
    "babel-loader": "^6.2.10",
    "babel-preset-es2015": "^6.18.0",
    "browser-sync": "^2.18.8",
    "concurrently": "^3.3.0",
    "css-loader": "^0.28.4",
    "extract-text-webpack-plugin": "^2.1.2",
    "http-server": "^0.9.0",
    "minimist": "^1.2.0",
    "onchange": "^3.2.1",
    "riot-tag-loader": "^1.0.0",
    "style-loader": "^0.18.2",
    "uglify-js": "^2.7.5",
    "vinyl-fs": "^2.4.4",
    "webpack": "^3.0.0"
  },
  "dependencies": {
    "color": "^2.0.0",
    "riot": "^3.6.1",
    "unfetch": "^3.0.0"
  },
  "scripts": {
    "dev:js": "webpack --config webpack.config.dev.js",
    "dev:copy": "node build-tools/copystuff ./assets/dist/** -o ./builds/dev && node build-tools/copystuff ./assets/dev/** -o ./builds/dev",
    "dev:serve": "browser-sync start --port 4000 --cors --server \"builds/dev\" --files \"builds/dev\"",
    "dev:js:watch": "onchange \"src/**/*.js\" \"src/**/*.tag\" -i -- yarn dev:js",
    "dev:copy:watch": "onchange \"assets/**\" -i -- yarn dev:copy",
    "start": "concurrently -k \"yarn dev:js:watch\" \"yarn dev:copy:watch\" \"yarn dev:serve\"",
    "dist:js": "webpack --config webpack.config.dist.js",
    "dist:copy": "node build-tools/copystuff ./assets/dist/** -o ./builds/dist",
    "dist": "yarn dist:js && yarn dist:copy"
  }
}
